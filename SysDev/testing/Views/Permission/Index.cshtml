@model SysDev.Models.UserPermissionViewModel

@{
    ViewBag.Title = "Manage Permissions";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Lvl2ActivePage = "userspermission";
}
<div class="row">
    <div class="col-md-12 m-b-10">
        <select class="form-control" id="roles" name="Roles">
            <option value=""> -- Select Role --</option>
            @foreach (var role in Model.Roles)
            {
                <option value="@role.Id">@role.Name</option>
            }
        </select>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <div class="box flat">
            <div class="box-header">
                <h3 class="box-title">Responsive Hover Table</h3>

                <div class="box-tools">
                    
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding" id="permission-table">
                <!-- Permission Table here   -->

            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>


@section scripts
{
    <script>
        $('#roles').change(function (e) {
            //alert("Id: " + $(this).find("option:selected").val());
            $("#permission-table").load("/Permission/Details/" + $(this).find("option:selected").val());
        });

    </script>
}