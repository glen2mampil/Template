
@model SysDev.Models.NewMasterDetailsViewModel
@{
    ViewBag.Title = "Edit";
    Layout = null;
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "save-masterDetail" }))
{

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="modal-header">
        <h4 id="exampleModalLongTitle">
            @ViewBag.ModalTitle
            <a class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </a>
        </h4>
    </div>
    <div class="modal-body" id="modal-content">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-12 form-group">
                    @Html.LabelFor(m => m.MasterDetail.Name , new { @class = "label text-black control-label", })
                    @Html.TextBoxFor(m => m.MasterDetail.Name, new { @class = "form-control input-sm" })
                </div>
                <div class="col-md-12 form-group">
                    @Html.LabelFor(m => m.MasterDetail.Description, new { @class = "label text-black control-label" })
                    @Html.TextBoxFor(m => m.MasterDetail.Description, new { @class = "form-control input-sm" })
                </div>
            </div>

        </div>
    </div>
    <div class="modal-footer">
        @Html.HiddenFor(m => m.MasterData.Id)
        @Html.HiddenFor(m => m.MasterDetail.Id)
        <p id="dialog-alert"></p>
        <button type="button" class="btn " data-dismiss="modal">Close</button>
        <button type="submit" id="save" class="btn btn-primary">Save changes</button>
    </div>
}

<script>
     $('#save-masterDetail').submit(function (e) {
         e.preventDefault();
         //swal("Data Save!", "New user has been added", "success");
         $.ajax({
             url: "/Settings/SaveMasterDetail/",
             type: "Post",
             data: $(this).serialize(),
             success: function (result) {
                 swal({ 
                     title: "New master Details is now added",
                     timer: 3000,
                     type: "success"
                 }).then(function () {
                     $("#table-masterdetails").fadeOut(800, function () {
                         $("#table-masterdetails").load("/Settings/ViewMasterDetails/" + @Model.MasterData.Id).fadeIn().delay(2000);
                     });
                 }).catch(swal.noop);
             },
             error : function( jqXhr , exception) {
                 //swal("Data Save!", result, "error");
                 //var data = JSON.parse(result);
                 var msg = '';
                 if (jqXhr.status === 0) {
                     msg = 'Not connect.\n Verify Network.';
                 } else if (jqXhr.status == 404) {
                     msg = 'Requested page not found. [404]';
                 } else if (jqXhr.status == 500) {
                     msg = 'Internal Server Error [500].';
                 } else if (exception === 'parsererror') {
                     msg = 'Requested JSON parse failed.';
                 } else if (exception === 'timeout') {
                     msg = 'Time out error.';
                 } else if (exception === 'abort') {
                     msg = 'Ajax request aborted.';
                 } else {
                     msg = 'Uncaught Error.\n' + jqXhr.responseText;
                 }
                 console.log(msg);
             }
         });
     });

</script>