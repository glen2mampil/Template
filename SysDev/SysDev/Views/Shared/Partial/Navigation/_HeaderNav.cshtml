<div class="modal fade" id="change-password" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
    @using (Html.BeginForm("", "", FormMethod.Post, new {role = "form", id = "save-new-password"}))
    {
        @Html.AntiForgeryToken()
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Change Password</h4>
            </div>
            <div class="modal-body" id="changepass-content-body">

                
                
                <div class="row">
                    <div class="col-md-12">
                        @Html.ValidationSummary("", new { @class = "text-danger text-sm" })
                        <div class="col-md-12 form-group " id="oldpassword">
                            Current Password
                            <input type="password" id="oldPw" class="col-md-12 form-control input-sm" required/>
                        </div>
                        <div class="col-md-12 form-group" id="newpassword">
                            New Password
                            <input type="password" id="newPw" class="col-md-12 form-control input-sm" required/>
                        </div>
                        <div class="col-md-12 form-group" id="confirmpassword">
                            Confirm Password
                            <input type="password" id="confirmPw" class="col-md-12 form-control input-sm" required/>
                        </div>
                    </div>
                </div>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" id="change-pass-btn" value="Change password" class="btn btn-primary">Save changes</button>
            </div>

        </div>
    }
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#change-password').on('hidden.bs.modal', function () {
            $(this).find('form')[0].reset();
            $(".validation-summary-valid").html("");
        });
        $("#save-new-password").on('submit',function (e) {
            e.preventDefault();
            $("#oldpassword").removeClass("has-error");
            $("#newpassword").removeClass("has-error");
            $("#confirmpassword").removeClass("has-error");
            $(".validation-summary-valid").html("");
            var newPassword = $("#newPw").val();
            var confirmPassword = $("#confirmPw").val();
            var oldPassword = $("#oldPw").val();
            if (newPassword !== confirmPassword) {
                $("#confirmpassword").addClass("has-error");
                $(".validation-summary-valid").html("<p>New Password and Confirm Password does not match<p/>");
                return 0;
            }
            $.ajax({
                url: "/UserProfile/ChangePassword/" + newPassword + "?oldP=" + oldPassword,
                type: "Post",
                data: {
                    'newPassword': newPassword,
                    'oldPassword': oldPassword
                },
                success: function (response) {
                    if (response.success) {
                        swal({
                            title: "<small>You Password was successfully change.</small>",
                            timer: 3000,
                            type: "success"
                        }).catch(swal.noop);
                        $("#change-password").modal('toggle');
                    }
                    else {
                        $(".validation-summary-valid").html(response.responseText);
                        if (response.field === "currentpw") {
                            $("#oldpassword").addClass("has-error");
                        } else {
                            $("#newpassword").addClass("has-error");
                            $("#confirmpassword").addClass("has-error");
                        }
                     }
                 },
                error: function (jqXhr, textStatus, errorThrown) {
                    swal({
                        title: "Opps! <small>something went wrong try again later</small>.",
                        text: "<p><small class='label label-error'> Status Code: " + jqXhr.status + "</small>" +
                            "<small class='label label-error'> Error: " + jqXhr.responseText + "</small></p>",
                        type: "error"
                    }).catch(swal.noop);
                }
            });
        });
    });
</script>
